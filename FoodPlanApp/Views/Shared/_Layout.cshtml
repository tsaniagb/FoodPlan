<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Food Plan</title>
    <link rel="stylesheet" href="~/css/styles.css">
</head>
<body>
    <div class="home">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
    </div>
    <!-- Logo and program name -->
    <div class="logo-section">
       <img id="programLogo" src="/images/program-logo.png" alt="Program Logo">
       <h1>
            <p>Food</p>
            <p> Plan</p>
       </h1>
    </div>


    <!-- User input -->
    <div class="user-input-container">
        <div class="user-data-box">
            <form id="userDataForm">
                <!-- User input fields go here -->
                <label for="nameInput">Name:</label>
                <input type="text" id="nameInput" required>

                <label for="ageInput">Age:</label>
                <input type="number" id="ageInput" required>

                <label for="heightInput">Height (cm):</label>
                <input type="number" step="0.01" id="heightInput" required>

                <label for="weightInput">Weight (kg):</label>
                <input type="number" step="0.01" id="weightInput" required>

                <button type="button" id="submitBtn">Submit</button>
            </form>
        </div>
    </div>
    <!-- BMI result -->
    <div class="bmi-result-container" id="bmiResultContainer" style="display: none;">
        <div class="bmi-result-box" id="result">
            <!-- Result content will be displayed here -->
        </div>
    </div>

    <!-- Food recommendation -->
    <div class="food-recommendation-container" id="foodRecommendationContainer" style="display: none;">
        <div class="food-recommendation-box" id="foodRecommendation">
            <!-- Food recommendation content will be displayed here -->
        </div>
    </div>

    <script>
        document.getElementById('submitBtn').addEventListener('click', function () {
            // Your existing code to handle form submission

            // After handling the form submission, show the containers
            document.getElementById('bmiResultContainer').style.display = 'block';
            document.getElementById('foodRecommendationContainer').style.display = 'block';
        });
    </script>


        <main role="main" class="pb-3">
            @RenderBody()
        </main>

    <footer class="border-top footer text-muted">
            &copy; 2023 - FoodPlanApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/foodPlan.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
